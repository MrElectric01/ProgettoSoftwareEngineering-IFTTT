<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="progettosoftwareengineering.localifttt.GUIController">
<children>
      <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox fx:id="homePane" alignment="TOP_CENTER" StackPane.alignment="CENTER">
               <children>
                  <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#addRule" text="Add Rule" textAlignment="CENTER">
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </VBox.margin>
                  </Button>
                  <TableView fx:id="ruleTable">
                     <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="130.0" text="Name" />
                        <TableColumn fx:id="triggerColumn" prefWidth="212.0" text="Trigger" />
                        <TableColumn fx:id="actionColumn" prefWidth="259.0" text="Action" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
               <StackPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </StackPane.margin>
            </VBox>
            <VBox fx:id="addRulePane" visible="false" StackPane.alignment="CENTER">
               <children>
                  <HBox VBox.vgrow="ALWAYS">
                     <children>
                        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                           <children>
                              <MenuButton mnemonicParsing="false" text="Select Trigger">
                                 <VBox.margin>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                 </VBox.margin>
                              </MenuButton>
                           </children>
                        </VBox>
                        <Separator orientation="VERTICAL" scaleX="5.0" HBox.hgrow="ALWAYS" />
                        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                           <children>
                              <MenuButton mnemonicParsing="false" text="Select Action">
                                 <VBox.margin>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                 </VBox.margin>
                              </MenuButton>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <Separator scaleY="5.0" VBox.vgrow="ALWAYS" />
                  <HBox alignment="CENTER" spacing="50.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label prefHeight="21.0" prefWidth="113.0" text="Insert rule name:" />
                        <TextField fx:id="insertRuleName" promptText="rule name..." />
                        <Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" text="Save" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </StackPane>
    </children>
</AnchorPane>
